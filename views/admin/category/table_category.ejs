<!-- Tables Category -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      <i class="fas fa-regular fa-plus mr-1"></i> Add Category
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% for( let index = 0; index < category.length; index++ ) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category[index].name %></td>
            <td>
              <form
                action="/admin/category/<%= category[index].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void(0)"
                  type="button"
                  class="btn btn-warning btn-sm mr-2 button-update"
                  data-id="<%= category[index].id %>"
                  data-name="<%= category[index].name %>"
                >
                  <i class="fas fa-regular fa-pen"></i>
                </a>
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-regular fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
