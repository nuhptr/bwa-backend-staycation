<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include('../../partials/header.ejs') %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- sidebar.ejs -->
      <%- include('../../partials/sidebar.ejs') %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- navbar.ejs -->
          <%- include('../../partials/navbar.ejs') %>

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Category</h1>
            <!-- End Heading -->

            <!-- Tables -->
            <p class="mb-4">
              Page for Insert, Update, and Delete category for staycation.
              <a target="_blank" href="#">Official Website</a>.
            </p>

            <!-- DataTales Example -->
            <%- include('table_category.ejs') %>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>
      </div>
      <!-- End of Content Wrapper -->
